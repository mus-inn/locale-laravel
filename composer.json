{
    "name": "localizy/localizy-laravel",
    "description": "This is my package localizy-laravel",
    "keywords": [
        "localizy",
        "laravel",
        "localizy-laravel"
    ],
    "homepage": "https://github.com/localizy/localizy-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Xavier MuntaneÃÅ",
            "email": "xavier@creagia.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/contracts": "^9.0",
        "illuminate/filesystem": "^9.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "ext-json": "*"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Localizy\\LocalizyLaravel\\": "src",
            "Localizy\\LocalizyLaravel\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Localizy\\LocalizyLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Localizy\\LocalizyLaravel\\LocalizyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
